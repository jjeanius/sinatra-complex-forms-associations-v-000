<h1>Create A New Pet</h1>

<form action="/pets" method="POST">
  <label>Pet Name:</label><input type="text" name="pet_name" id="pet_name">
<br></br>

<label><h3>Existing Owner?</label></h3>
<%@owners.each do |owner|%> <input type="checkbox" name="pet[owner_ids][]" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>
<%end%>
<br> </br>

<label>and/or, create a new owner:</label>
  <br></br>
  <label>Name:</label>
  <input type="text" name="owner_name" id="owner_name"></input>
  <br> </br>

  <input type="submit" value="Create Pet">
</form>
